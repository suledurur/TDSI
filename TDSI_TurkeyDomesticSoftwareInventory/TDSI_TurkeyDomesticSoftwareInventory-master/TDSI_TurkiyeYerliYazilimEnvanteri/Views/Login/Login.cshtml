@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Scripts/jquery-3.4.1.min.js")
@Styles.Render("~/Content/login.css")
@Styles.Render("~/Content/Site.css")
@Scripts.Render("~/Scripts/login.js")

<div class="form">
    <div id="login">

        <h1>Giriş Yap</h1>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div class="field-wrap">
                <label for="username">Kullanıcı Adı<span class="req">*</span></label>
                <input type="text" id="username" name="loginName">
            </div>

            <div class="field-wrap">
                <label for="pass">Şifre<span class="req">*</span></label>
                <input type="password" name="password">
            </div>
            <div class="center">
                <div class="eye slash" onclick="togglePW()">
                    <div></div>
                    <div></div>
                </div>
            </div>

            <div class="field-wrap">
                <p class="forgot"><a href="#"><u id="frgtPwBtn">Şifremi unuttum</u></a></p>
                <button type="submit" class="button button-block">Giriş Yap</button> <br> <br>

            </div>

        }

    </div>
    <div id="forgotPw" class="divInactive">
        <div class="text-center">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">


            <h3> <i style=" color: #65def9" class="fa fa-lock fa-4x"> </i> </h3>
            <h1 class="text-center"> Şifremi Unuttum</h1>
            <p style="color: #a0b3b0"> Şifrenizi buradan sıfırlayabilirsiniz.</p>


            <div class="panel-body">
                <div class="form">
                    <fieldset>

                        <div class="form-group">
                            <div class="input-group">

                                <div class="field-wrap input-group">
                                    <span class="input-group-addon"> <i class="glyphicon glyphicon-envelope color-blue"> </i> </span>
                                    <label for="emailInput"> &nbsp &nbsp &nbsp E-mail<span class="req"> *</span> </label>
                                    <input id="emailInput" type="email" required autocomplete="off" />
                                </div>

                                <div class="field-wrap">
                                    <button type="submit" class="button button-block"> Gönder</button>
                                </div>
                            </div>

                        </div>
                    </fieldset>
                </div>

            </div>
        </div>

        <p class="forgot"><a href="#"><u id="goToLogin">Zaten hesabın var mı? Giriş yap</u></a></p>

    </div>
</div>
