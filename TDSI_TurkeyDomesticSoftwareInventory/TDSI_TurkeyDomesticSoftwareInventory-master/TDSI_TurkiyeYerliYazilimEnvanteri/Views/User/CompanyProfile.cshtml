<!-- Bildirim Mesajları-->
<div class="container">
    @{
        switch (TempData["InstantNotification"])
        {
            case "SoftwareAddingSucceeded":
                <div class="alert success">
                    <span class="closebtn">&times;</span>
                    <strong>Tebrikler!</strong> Yazılımınız başarıyla eklendi.
                </div>
                break;
            case "SoftwareAddingFailure":
                <div class="alert">
                    <span class="closebtn">&times;</span>
                    <strong>Hata!</strong> Yazılım eklenirken bir sorunla karşılaşıldı, lütfen daha sonra tekrar deneyin ya da destek ile iletişime geçin.
                </div>
                break;
            case "SoftwareEditingSucceeded":
                <div class="alert success">
                    <span class="closebtn">&times;</span>
                    <strong>Tebrikler!</strong> Yazılım bilgileri başarıyla düzenlendi.
                </div>
                break;
            case "SoftwareEditingFailure":
                <div class="alert">
                    <span class="closebtn">&times;</span>
                    <strong>Hata!</strong> Yazılım bilgileri düzenlenirken bir sorunla karşılaşıldı, lütfen daha sonra tekrar deneyin ya da destek ile iletişime geçin.
                </div>
                break;
            case "BrachAddingSucceeded":
                <div class="alert success">
                    <span class="closebtn">&times;</span>
                    <strong>Tebrikler!</strong> Şube başarıyla eklendi.
                </div>
                break;
            case "BranchAddingFailure":
                <div class="alert">
                    <span class="closebtn">&times;</span>
                    <strong>Hata!</strong> Şube eklenirken bir sorunla karşılaşıldı, lüften daha sonra tekrar deneyin ya da destek ile iletişime geçin.
                </div>
                break;
            case "BranchEditingSucceeded":
                <div class="alert success">
                    <span class="closebtn">&times;</span>
                    <strong>Tebrikler!</strong> Şube bilgileri başarıyla düzenlendi.
                </div>
                break;
            case "BranchEditingFailure":
                <div class="alert">
                    <span class="closebtn">&times;</span>
                    <strong>Hata!</strong> Şube bilgileri düzenlenirken bir sorunla karşılaşıldı, lüften daha sonra tekrar deneyin ya da destek ile iletişime geçin.
                </div>
                break;
            case "AccountInformationsChangingSucceeded":
                <div class="alert success">
                    <span class="closebtn">&times;</span>
                    <strong>Tebrikler!</strong> Hesap bilgileri başarıyla güncellendi.
                </div>
                break;
            case "AccountInformationsChangingFailure":
                <div class="alert">
                    <span class="closebtn">&times;</span>
                    <strong>Hata!</strong> Hesap bilgileri güncellenirken bir sorunla karşılaşıldı, lüften daha sonra tekrar deneyin ya da destek ile iletişime geçin.
                </div>
                break;
            case "PasswordChangingSucceeded":
                <div class="alert success">
                    <span class="closebtn">&times;</span>
                    <strong>Tebrikler!</strong> Şifreniz başarıyla değiştirildi.
                </div>
                break;
            case "PasswordChangingFailure":
                <div class="alert">
                    <span class="closebtn">&times;</span>
                    <strong>Hata!</strong> Şifreniz değiştirilirken bir sorunla karşılaşıldı, lüften daha sonra tekrar deneyin ya da destek ile iletişime geçin.
                </div>
                break;
            case "DeleteFromFavoritesSucceeded":
                <div class="alert success">
                    <span class="closebtn">&times;</span>
                    <strong>Tebrikler!</strong> İstediğiniz yazılım favorilerinizden başarıyla silindi.
                </div>
                break;
            case "DeleteFromFavoritesFailure":
                <div class="alert">
                    <span class="closebtn">&times;</span>
                    <strong>Hata!</strong> İstediğiniz yazılım favorilerinizden çıkarılırken bir hata oluştu, lütfen tekrar deneyin ya da destek ile iletişime geçin.
                </div>
                break;
            case "DeleteFromFollowsSucceeded":
                <div class="alert success">
                    <span class="closebtn">&times;</span>
                    <strong>Tebrikler!</strong> İstediğiniz kişi takip listenizden başarıyla silindi.
                </div>
                break;
            case "DeleteFromFollowsFailure":
                <div class="alert">
                    <span class="closebtn">&times;</span>
                    <strong>Tebrikler!</strong> İstediğiniz kişi takip listenizden çıkarılırken bir hata oluştu, lütfen tekrar deneyin ya da destek ile iletişime geçin.
                </div>
                break;
            case "SoftwareUpdateCancelingSucceeded":
                <div class="alert warning">
                    <span class="closebtn">&times;</span>
                    <strong>Uyarı!</strong> Yazılım düzenleme işlemi iptal edildi.
                </div>
                break;
            default:
                break;
        }

    }

</div>


